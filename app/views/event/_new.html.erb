 <%= form_tag url_for(action: "create"), multipart: true, method: "post" do %>
	  <fieldset>
	    <h3>Event</h3>
	    <div class="form-group">
	      <%= label_tag 'Title' %><br>
	      <%= text_field_tag 'title'%>
	    </div>
	    <div class="form-group">
	      <%= label_tag 'Description' %>  <br>
			  <%= text_field_tag 'description', class: "form-control" %>
	    </div>
	    <div class="form-group">
		  	<%= label_tag 'Location' %>  <br>
			  <%= text_field_tag 'location' %>
	    </div>
	    <div class="form-group">
	      <%= label_tag 'Price' %>  <br>
			  <%= text_field_tag 'price' %>
	    </div>
	    <div class="form-group">
	      <%= label_tag 'Start date' %>  : </b><br>
			  <%= datetime_select("start_date", "written_on", prompt: {day: 'Choose day', month: 'Choose month', year: 'Choose year'}) %>
	    </div>
	    <div class="form-group">
	      <%= label_tag 'Duration :' %><br/>
			  <%= text_field_tag 'duration' %>
	    </div>
	    <h4>Add a picture ?</h4>
        <%= file_field_tag :avatar %>
			  <br /> <br />
			  <%= submit_tag "Valider" %>
	    <center><button type="submit" class="btn btn-primary" style="margin-top: 25px; border: solid #92a1a2 1px">Submit</button></center>
	  </fieldset>
<% end %>